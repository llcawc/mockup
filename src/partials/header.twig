<header>
	<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark nav-autohide shadow">
		<div class="navbar-compensation container-md">

			<a class="navbar-brand fw-bold fs-4" href="/">Mockup</a>

			<div class="collapse navbar-collapse justify-content-end me-4" id="navbarNav">
				<ul class="navbar-nav fs-5 text-end mt-lg-0 mt-2 gap-1">
					{% for item in site.pages %}
						<li class="nav-item">
							<a href='/{{ item.page }}' class="nav-link {% if item.page == page %} active{% endif %}">
								<i class="bi bi-{{item.bi}}"></i>&nbsp;{{ item.title }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div
				class="nav-switch">
				<!-- Color theme switcher -->
				{% include "./switcher.twig" %}
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Переключатель навигации">
					<span class="navbar-toggler-icon"></span>
				</button>
			</div>

		</div>
	</nav>
	<div class="container-md">
		<div class="row">
			<div class="col">
				<h1 class="section display-1">{{ header }}</h1>
			</div>
		</div>
	</div>
</header>
